# CardioWatch API Environment Configuration
# Copy to .env and fill in values

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
PORT=8080
APP_VERSION=1.0.0
APP_NAME=CardioWatch API

# =============================================================================
# SECURITY (REQUIRED - Generate secure values for production)
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_minimum_32_characters_long
REFRESH_TOKEN_SECRET=your_refresh_token_secret_32_chars
COOKIE_SECRET=your_cookie_secret_32_characters_long
ENCRYPTION_KEY=your_aes_256_encryption_key_32chars

# =============================================================================
# CORS
# =============================================================================
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# DATABASE (REQUIRED)
# =============================================================================
DATABASE_URL=postgresql://cardiowatch:password@localhost:5432/cardiowatch
DATABASE_POOL_SIZE=10

# =============================================================================
# REDIS (Optional - for caching and sessions)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# WHATSAPP BUSINESS API
# =============================================================================
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_WEBHOOK_SECRET=

# =============================================================================
# WEARABLE INTEGRATIONS
# =============================================================================
# Apple HealthKit
APPLE_HEALTHKIT_TEAM_ID=
APPLE_HEALTHKIT_KEY_ID=

# Fitbit
FITBIT_CLIENT_ID=
FITBIT_CLIENT_SECRET=

# Garmin
GARMIN_CONSUMER_KEY=
GARMIN_CONSUMER_SECRET=

# =============================================================================
# PUSH NOTIFICATIONS (Firebase Cloud Messaging)
# =============================================================================
FCM_PROJECT_ID=
FCM_PRIVATE_KEY=
FCM_CLIENT_EMAIL=

# =============================================================================
# EMAIL (SMTP)
# =============================================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@cardiowatch.com

# =============================================================================
# MONITORING
# =============================================================================
SENTRY_DSN=
LOG_LEVEL=info

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_MFA=true
ENABLE_AUDIT_LOGGING=true
ENABLE_FIELD_ENCRYPTION=true
