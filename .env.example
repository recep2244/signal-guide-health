# =============================================================================
# CardioWatch Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# API Configuration
VITE_API_BASE_URL=https://api.cardiowatch.com/v1
VITE_WS_URL=wss://api.cardiowatch.com/ws

# WhatsApp Business API (Meta Cloud API)
VITE_WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
VITE_WHATSAPP_ACCESS_TOKEN=your_access_token
VITE_WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_verify_token
VITE_WHATSAPP_API_VERSION=v18.0

# Apple HealthKit / Google Fit (OAuth)
VITE_HEALTHKIT_CLIENT_ID=your_healthkit_client_id
VITE_GOOGLE_FIT_CLIENT_ID=your_google_fit_client_id
VITE_FITBIT_CLIENT_ID=your_fitbit_client_id

# Authentication
VITE_AUTH_DOMAIN=auth.cardiowatch.com
VITE_AUTH_CLIENT_ID=your_auth_client_id
VITE_AUTH_AUDIENCE=https://api.cardiowatch.com

# Push Notifications (Firebase Cloud Messaging)
VITE_FCM_VAPID_KEY=your_fcm_vapid_key
VITE_FCM_PROJECT_ID=your_firebase_project_id

# Analytics (Optional)
VITE_ANALYTICS_ID=your_analytics_id
VITE_SENTRY_DSN=your_sentry_dsn

# Feature Flags
VITE_ENABLE_MOCK_DATA=true
VITE_ENABLE_REAL_TIME_SYNC=false
VITE_ENABLE_PUSH_NOTIFICATIONS=false

# Environment
VITE_APP_ENV=development
